<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.hyojung.muggi.ChooseActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="643dp"
>
        <ImageView
            android:id="@+id/qbg"
            android:layout_width="1400dp"
            android:layout_height="1500dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/q_bg"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/bg2"/>
        <ImageView
            android:id="@+id/text"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="150dp"
            android:src="@drawable/selectegg"/>

        <ImageView
            android:id="@+id/choosetext"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="110dp"
            android:src="@drawable/eggchoose_text"/>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tool"
            android:id="@+id/eggs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_below="@id/text">

            <ImageButton
                android:id="@+id/spikeySelect"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginRight="-210dp"
                android:background="#00ff0000"
                android:scaleType="fitXY"
                android:src="@drawable/egg_btn" />

            <ImageButton
                android:id="@+id/baldySelect"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="#00ff0000"
                android:scaleType="fitXY"
                android:layout_marginRight="-210dp"
                android:src="@drawable/egg_btn" />

            <ImageButton
                android:id="@+id/buggySelect"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="#00ff0000"
                android:scaleType="fitXY"
                android:src="@drawable/egg_btn" />
        </LinearLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
