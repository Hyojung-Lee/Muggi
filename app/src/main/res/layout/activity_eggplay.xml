<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    android:adjustViewBounds="true"
    android:rotation="180"
    android:src="@drawable/bg2"/>

    <TextView
        android:id="@+id/warmth_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="95dp"
        android:fontFamily="sans-serif-thin"
        android:scaleType="fitXY"
        android:text="100"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="100dp" />
    <TextView
        android:id="@+id/warmth_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="95dp"
        android:fontFamily="sans-serif-thin"
        android:scaleType="fitXY"
        android:text="300"
        android:textColor="@color/colorPrimaryAlpha"
        android:textSize="100dp" />
    <ImageView
        android:id="@+id/shadow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/shadow_egg" />

    <ImageView
        android:id="@+id/egg"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/egg" />


    <ImageButton
        android:id="@+id/hug"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="450dp"
        android:scaleType="fitXY"
        android:background="#00ff0000"
        android:src="@drawable/hug_btn1" />

    <ImageView
        android:id="@+id/eggtext"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/eggplay_text" />

</FrameLayout>
